# Blockscout Frontend Environment Configuration for XAI
# Copy this to ~/blockscout-frontend/.env.local on the server

# ===========================================
# API CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_HOST=localhost
NEXT_PUBLIC_API_PORT=4000
NEXT_PUBLIC_API_PROTOCOL=http
NEXT_PUBLIC_API_WEBSOCKET_PROTOCOL=ws

# For production with HTTPS:
# NEXT_PUBLIC_API_HOST=testnet-explorer.xaiblockchain.com
# NEXT_PUBLIC_API_PROTOCOL=https
# NEXT_PUBLIC_API_WEBSOCKET_PROTOCOL=wss

# ===========================================
# NETWORK INFORMATION
# ===========================================
NEXT_PUBLIC_NETWORK_NAME=XAI Testnet
NEXT_PUBLIC_NETWORK_SHORT_NAME=XAI
NEXT_PUBLIC_NETWORK_ID=1337
NEXT_PUBLIC_NETWORK_CURRENCY_NAME=XAI
NEXT_PUBLIC_NETWORK_CURRENCY_SYMBOL=XAI
NEXT_PUBLIC_NETWORK_CURRENCY_DECIMALS=18

# ===========================================
# FEATURES
# ===========================================
NEXT_PUBLIC_IS_TESTNET=true
NEXT_PUBLIC_HAS_BEACON_CHAIN=false
NEXT_PUBLIC_HAS_USER_OPS=false

# Charts
NEXT_PUBLIC_HOMEPAGE_CHARTS=["daily_txs"]
NEXT_PUBLIC_STATS_API_HOST=

# ===========================================
# BRANDING
# ===========================================
NEXT_PUBLIC_NETWORK_LOGO=https://xaiblockchain.com/logo.svg
NEXT_PUBLIC_NETWORK_ICON=https://xaiblockchain.com/icon.svg
NEXT_PUBLIC_OG_DESCRIPTION=XAI Blockchain Explorer - AI Compute Pooling Network
NEXT_PUBLIC_OG_IMAGE_URL=

# Theme
NEXT_PUBLIC_HOMEPAGE_PLATE_BACKGROUND=linear-gradient(135deg, #1a1a2e 0%, #16213e 100%)
NEXT_PUBLIC_HOMEPAGE_PLATE_TEXT_COLOR=white

# ===========================================
# EXTERNAL LINKS
# ===========================================
NEXT_PUBLIC_NETWORK_RPC_URL=https://testnet-rpc.xaiblockchain.com
NEXT_PUBLIC_NETWORK_EXPLORERS=[]

# ===========================================
# DISABLED FEATURES
# ===========================================
NEXT_PUBLIC_HAS_CONTRACT_AUDIT_REPORTS=false
NEXT_PUBLIC_AD_BANNER_PROVIDER=none
NEXT_PUBLIC_AD_TEXT_PROVIDER=none
NEXT_PUBLIC_MARKETPLACE_ENABLED=false
NEXT_PUBLIC_GRAPHIQL_TRANSACTION=
NEXT_PUBLIC_WEB3_WALLETS=[]

# ===========================================
# FOOTER
# ===========================================
NEXT_PUBLIC_FOOTER_LINKS=[{"url":"https://xaiblockchain.com","text":"XAI Website"},{"url":"https://github.com/xai-blockchain","text":"GitHub"},{"url":"https://discord.gg/xai","text":"Discord"}]
